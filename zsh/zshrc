autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:git*' formats " %{$fg[green]%}(%b)%{$reset_color%}"

precmd() {
    vcs_info
}

setopt prompt_subst
PROMPT='%2~${vcs_info_msg_0_} %# '

autoload -Uz compinit && compinit
autoload -Uz +X bashcompinit && bashcompinit

. $HOME/dotfiles/rc/bin
. $HOME/dotfiles/rc/coreutils
. $HOME/dotfiles/rc/go
. $HOME/dotfiles/rc/pyenv
. $HOME/dotfiles/rc/rbenv

# Include Bukalapak zshrc
[ -r $HOME/Bukalapak/dotfiles/zsh/zshrc ] && \
    . $HOME/Bukalapak/dotfiles/zsh/zshrc
